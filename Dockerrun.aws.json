{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "acasado86/multi-client",
            "hostname": "client",
            "essential": false,
            "environment": [
                {
                    "name": "PUBLIC_URL",
                    "value": "/react"
                }
            ],
            "memory": 128
        },
        {
            "name": "ng-client",
            "image": "acasado86/multi-ng-client",
            "hostname": "ng-client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "acasado86/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "acasado86/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "acasado86/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [ "client", "ng-client", "server"],
            "memory": 128
        }
    ]
}